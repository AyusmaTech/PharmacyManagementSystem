<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/grey"
        android:orientation="vertical">

    <TextView
        android:id="@+id/text_drug_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:layout_marginStart="5dp"
        android:text="Drug name" />
    <EditText
        android:id="@+id/edit_text_name"
        android:layout_width="match_parent"
        android:maxLines="1"
        android:singleLine="true"
        android:layout_marginTop="5dp"
        android:layout_margin="10dp"
        android:padding="16dp"
        android:background="@drawable/edit_text_shape_rec"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/text_drug_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:layout_marginStart="5dp"
        android:text="Drug Id" />
    <EditText
        android:id="@+id/edit_text_id"
        android:layout_width="match_parent"
        android:background="@drawable/edit_text_shape_rec"
        android:maxLines="1"
        android:singleLine="true"
        android:padding="16dp"
        android:layout_marginTop="5dp"
        android:layout_margin="10dp"
        android:inputType="number"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/text_manufacturer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:layout_marginStart="5dp"
        android:text="Manufacturer" />
    <EditText
        android:id="@+id/edit_text_manufacturer"
        android:layout_width="match_parent"
        android:background="@drawable/edit_text_shape_rec"
        android:maxLines="1"
        android:singleLine="true"
        android:padding="16dp"
        android:layout_marginTop="5dp"
        android:layout_margin="10dp"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/text_batch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:layout_marginStart="5dp"
        android:text="Batch No" />
    <EditText
        android:id="@+id/edit_text_batch"
        android:layout_width="match_parent"
        android:inputType="number"
        android:maxLines="1"
        android:singleLine="true"
        android:padding="16dp"
        android:layout_marginTop="5dp"
        android:layout_margin="10dp"
        android:background="@drawable/edit_text_shape_rec"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/text_prod_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:layout_marginStart="5dp"
        android:text="Production Date" />

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            android:layout_margin="10dp"
            android:layout_height="wrap_content">

    <EditText
        android:id="@+id/edit_text_prod_date"
        android:layout_width="match_parent"
        android:background="@drawable/edit_text_shape_rec"
        android:maxLines="1"
        android:singleLine="true"
        android:padding="16dp"
        android:layout_weight="2"
        android:editable="false"
        android:layout_height="wrap_content"/>

            <ImageButton
                android:id="@+id/btn_prod_date"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/add_button_shape"
                android:layout_weight="1"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="10dp"
                android:src="@drawable/ic_add_white_24dp"/>

        </LinearLayout>

    <TextView
        android:id="@+id/text_expiry_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:layout_marginStart="5dp"
        android:text="Expiry Date" />

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        android:layout_margin="10dp"
        android:layout_height="wrap_content">

    <EditText
        android:id="@+id/edit_text_expiry_date"
        android:layout_width="match_parent"
        android:editable="false"
        android:maxLines="1"
        android:singleLine="true"
        android:padding="16dp"
        android:layout_weight="2"
        android:background="@drawable/edit_text_shape_rec"
        android:layout_height="wrap_content"/>

        <ImageButton
            android:id="@+id/btn_exp_date"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/add_button_shape"
            android:layout_weight="1"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:src="@drawable/ic_add_white_24dp"/>

    </LinearLayout>

    <TextView
        android:id="@+id/text_dosage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:layout_marginStart="5dp"
        android:text="Dosage" />
    <EditText
        android:id="@+id/edit_text_dosage"
        android:layout_width="match_parent"
        android:maxLines="1"
        android:singleLine="true"
        android:layout_marginTop="5dp"
        android:padding="16dp"
        android:layout_margin="10dp"
        android:background="@drawable/edit_text_shape_rec"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/text_reg_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:layout_marginStart="5dp"
        android:text="Registration Date" />


    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        android:layout_margin="10dp"
        android:layout_height="wrap_content">

    <EditText
        android:id="@+id/edit_text_reg_date"
        android:layout_width="match_parent"
        android:editable="false"
        android:maxLines="1"
        android:singleLine="true"
        android:padding="16dp"
        android:layout_weight="2"
        android:background="@drawable/edit_text_shape_rec"
        android:layout_height="wrap_content"/>

        <ImageButton
            android:id="@+id/btn_reg_date"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/add_button_shape"
            android:layout_weight="1"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:src="@drawable/ic_add_white_24dp"/>



    </LinearLayout>

    <TextView
        android:id="@+id/text_quantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:layout_marginStart="5dp"
        android:text="Quantity" />

    <EditText
        android:id="@+id/edit_text_quantity"
        android:layout_width="match_parent"
        android:inputType="number"
        android:maxLines="1"
        android:singleLine="true"
        android:layout_marginTop="5dp"
        android:padding="16dp"
        android:layout_margin="10dp"
        android:background="@drawable/edit_text_shape_rec"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/text_cost_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:layout_marginStart="5dp"
        android:text="Cost Price" />

    <EditText
        android:id="@+id/edit_text_cost_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/edit_text_shape_rec"
        android:maxLines="1"
        android:singleLine="true"
        android:padding="16dp"
        android:layout_marginTop="5dp"
        android:layout_margin="10dp"
        android:inputType="number"
       />

        <Button
            android:id="@+id/btn_submit"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="15dp"
            android:background="@drawable/button_shape"
            android:textColor="@android:color/white"
            android:text="Submit"/>

    </LinearLayout>

</ScrollView>