<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_margin="10dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <com.google.android.material.card.MaterialCardView
            app:cardElevation="10dp"
            android:layout_weight="1"
            android:id="@+id/card_view_goto_store"
            app:cardCornerRadius="10dp"
            android:layout_gravity="center_vertical"
            android:layout_margin="10dp"
            android:layout_width="0dp"
            android:layout_height="150dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textAllCaps="true"
                android:text="Goto Store"/>

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            app:cardElevation="10dp"
            app:cardCornerRadius="10dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:id="@+id/card_view_view_drugs"
            android:layout_margin="10dp"
            android:layout_width="0dp"
            android:layout_height="150dp">

            <TextView
                android:layout_width="wrap_content"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:textAllCaps="true"
                android:text="View Drugs"/>

        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>

    <LinearLayout
        android:layout_margin="10dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <com.google.android.material.card.MaterialCardView
            app:cardElevation="10dp"
            android:layout_weight="1"
            app:cardCornerRadius="10dp"
            android:layout_margin="10dp"
            android:id="@+id/card_view_view_staff"
            android:layout_width="0dp"
            android:layout_height="150dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textAllCaps="true"
                android:text="View Staff"/>

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            app:cardElevation="10dp"
            app:cardCornerRadius="10dp"
            android:layout_weight="1"
            android:id="@+id/card_view_view_sales"
            android:layout_margin="10dp"
            android:layout_width="0dp"
            android:layout_height="150dp">

            <TextView
                android:layout_width="wrap_content"
           android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:textAllCaps="true"
                android:text="View Sales"/>

        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>

    <LinearLayout
        android:layout_margin="10dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <com.google.android.material.card.MaterialCardView
            app:cardElevation="10dp"
            android:id="@+id/card_view_drug_state"
            android:layout_weight="1"
            app:cardCornerRadius="10dp"
            android:layout_margin="10dp"
            android:layout_gravity="center"
            android:layout_width="0dp"
            android:layout_height="150dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textAllCaps="true"
                android:text="Drug State"/>

        </com.google.android.material.card.MaterialCardView>



    </LinearLayout>


</LinearLayout>